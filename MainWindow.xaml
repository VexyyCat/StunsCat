<Window
	x:Class="StunsCat.MainWindow" 
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:local="clr-namespace:StunsCat" 
	xmlns:gif="http://wpfanimatedgif.codeplex.com"
	Title="StunsCat Music Player"
	Height="800"
	Width="1200"
	WindowStartupLocation="CenterScreen"
	WindowStyle="None"
	AllowsTransparency="True"
	Background="#00FFFFFF"
	ResizeMode="CanResize">
    <FrameworkElement.Resources>
        <ResourceDictionary>
            <local:BoolToVisibilityConverter
				x:Key="BoolToVisibilityConverter" />
            <local:PlayPauseConverter
				x:Key="PlayPauseConverter" />
            <Style
				TargetType="{x:Type Button}"
				x:Key="ModernButton">
                <Setter
					Property="Background"
					Value="#FF2A2A2A" />
                <Setter
					Property="Foreground"
					Value="#FFFFFFFF" />
                <Setter
					Property="BorderThickness"
					Value="0" />
                <Setter
					Property="FontSize"
					Value="14" />
                <Setter
					Property="FontWeight"
					Value="Medium" />
                <Setter
					Property="Padding"
					Value="15,8" />
                <Setter
					Property="Margin"
					Value="5" />
                <Setter
					Property="FrameworkElement.Cursor"
					Value="Hand" />
                <Setter
					Property="Template">
                    <Setter.Value>
                        <ControlTemplate
							TargetType="{x:Type Button}">
                            <Border
								Background="{TemplateBinding Background}"
								CornerRadius="8"
								BorderBrush="{TemplateBinding BorderBrush}"
								BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter
									HorizontalAlignment="Center"
									VerticalAlignment="Center" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger
									Property="UIElement.IsMouseOver"
									Value="True">
                                    <Setter
										Property="Background"
										Value="#FF3A3A3A" />
                                </Trigger>
                                <Trigger
									Property="IsPressed"
									Value="True">
                                    <Setter
										Property="Background"
										Value="#FF1A1A1A" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style
				TargetType="{x:Type Button}"
				BasedOn="{StaticResource ModernButton}"
				x:Key="PlayButton">
                <Setter
					Property="Background"
					Value="#FF00A8FF" />
                <Setter
					Property="Width"
					Value="60" />
                <Setter
					Property="Height"
					Value="60" />
                <Setter
					Property="FontSize"
					Value="20" />
                <Setter
					Property="Template">
                    <Setter.Value>
                        <ControlTemplate
							TargetType="{x:Type Button}">
                            <Border
								Background="{TemplateBinding Background}"
								CornerRadius="30"
								BorderBrush="{TemplateBinding BorderBrush}"
								BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter
									HorizontalAlignment="Center"
									VerticalAlignment="Center" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger
									Property="UIElement.IsMouseOver"
									Value="True">
                                    <Setter
										Property="Background"
										Value="#FF0088CC" />
                                </Trigger>
                                <Trigger
									Property="IsPressed"
									Value="True">
                                    <Setter
										Property="Background"
										Value="#FF0066AA" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style
				TargetType="{x:Type Slider}"
				x:Key="ModernSlider">
                <Setter
					Property="Background"
					Value="#FF3A3A3A" />
                <Setter
					Property="Foreground"
					Value="#FF00A8FF" />
                <Setter
					Property="Height"
					Value="6" />
                <Setter
					Property="Template">
                    <Setter.Value>
                        <ControlTemplate
							TargetType="{x:Type Slider}">
                            <Grid>
                                <Border
									Name="TrackBackground"
									Background="{TemplateBinding Background}"
									CornerRadius="3"
									Height="6" />
                                <Track
									Name="PART_Track">
                                    <Track.DecreaseRepeatButton>
                                        <RepeatButton
											Command="Slider.DecreaseLarge"
											Background="{TemplateBinding Foreground}"
											Height="6" />
                                    </Track.DecreaseRepeatButton>
                                    <Track.Thumb>
                                        <Thumb
											Background="{TemplateBinding Foreground}"
											Width="16"
											Height="16" />
                                    </Track.Thumb>
                                    <Track.IncreaseRepeatButton>
                                        <RepeatButton
											Command="Slider.IncreaseLarge"
											Background="#00FFFFFF" />
                                    </Track.IncreaseRepeatButton>
                                </Track>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style
				TargetType="{x:Type Button}"
				BasedOn="{StaticResource ModernButton}"
				x:Key="ShuffleToggleButton">
                <Setter
					Property="Background"
					Value="#FF2A2A2A" />
                <Style.Triggers>
                    <DataTrigger
						Value="True"
						Binding="{Binding IsShuffleEnabled}">
                        <Setter
							Property="Background"
							Value="#FF00A8FF" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
            <Style
				TargetType="{x:Type Button}"
				BasedOn="{StaticResource ModernButton}"
				x:Key="LoopToggleButton">
                <Setter
					Property="Background"
					Value="#FF2A2A2A" />
                <Style.Triggers>
                    <DataTrigger
						Value="True"
						Binding="{Binding IsLoopEnabled}">
                        <Setter
							Property="Background"
							Value="#FF00A8FF" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
            <Style
				TargetType="{x:Type TextBox}"
				x:Key="SearchTextBox">
                <Setter
					Property="Background"
					Value="#FF2A2A2A" />
                <Setter
					Property="Foreground"
					Value="#FFFFFFFF" />
                <Setter
					Property="BorderThickness"
					Value="1" />
                <Setter
					Property="BorderBrush"
					Value="#FF444444" />
                <Setter
					Property="FontSize"
					Value="12" />
                <Setter
					Property="Padding"
					Value="8,6" />
                <Setter
					Property="Template">
                    <Setter.Value>
                        <ControlTemplate
							TargetType="{x:Type TextBox}">
                            <Border
								Background="{TemplateBinding Background}"
								BorderBrush="{TemplateBinding BorderBrush}"
								BorderThickness="{TemplateBinding BorderThickness}"
								CornerRadius="6">
                                <ScrollViewer
									x:Name="PART_ContentHost"
									Margin="{TemplateBinding Padding}" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger
									Property="UIElement.IsFocused"
									Value="True">
                                    <Setter
										Property="BorderBrush"
										Value="#FF00A8FF" />
                                </Trigger>
                                <Trigger
									Property="UIElement.IsMouseOver"
									Value="True">
                                    <Setter
										Property="BorderBrush"
										Value="#FF555555" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style
				TargetType="{x:Type Button}"
				BasedOn="{StaticResource ModernButton}"
				x:Key="ClearSearchButton">
                <Setter
					Property="Background"
					Value="#FF444444" />
                <Setter
					Property="Width"
					Value="24" />
                <Setter
					Property="Height"
					Value="24" />
                <Setter
					Property="FontSize"
					Value="10" />
                <Setter
					Property="Padding"
					Value="0" />
                <Setter
					Property="Margin"
					Value="0" />
                <Setter
					Property="Template">
                    <Setter.Value>
                        <ControlTemplate
							TargetType="{x:Type Button}">
                            <Border
								Background="{TemplateBinding Background}"
								CornerRadius="12"
								BorderBrush="{TemplateBinding BorderBrush}"
								BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter
									HorizontalAlignment="Center"
									VerticalAlignment="Center" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger
									Property="UIElement.IsMouseOver"
									Value="True">
                                    <Setter
										Property="Background"
										Value="#FF666666" />
                                </Trigger>
                                <Trigger
									Property="IsPressed"
									Value="True">
                                    <Setter
										Property="Background"
										Value="#FF222222" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Storyboard
				RepeatBehavior="Forever"
				x:Key="VinylRotationStoryboard">
                <DoubleAnimation
					Storyboard.TargetName="VinylRotateTransform"
					Storyboard.TargetProperty="Angle"
					From="0"
					To="360"
					Duration="0:0:3" />
            </Storyboard>
        </ResourceDictionary>
    </FrameworkElement.Resources>
    <Grid>
        <Image
			Name="BackgroundGif"
			Stretch="UniformToFill"
			HorizontalAlignment="Center"
			VerticalAlignment="Center"
			Panel.ZIndex="0"
			IsEnabled="False"
			gif:ImageBehavior.AnimatedSource="{Binding CurrentBackgroundGif}" />
        <Rectangle
			Fill="#FF000000"
			Opacity="0.4"
			Panel.ZIndex="1" />
        <Grid
			Margin="20"
			ZIndex="2">
            <Grid.RowDefinitions>
                <RowDefinition
					Height="Auto" />
                <RowDefinition
					Height="*" />
                <RowDefinition
					Height="Auto" />
            </Grid.RowDefinitions>
            <Grid
				Row="0"
				Height="40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
						Width="*" />
                    <ColumnDefinition
						Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
					Grid.Column="0"
					Text="🎧 StunsCat Music Player"
					FontSize="18"
					FontWeight="Bold"
					Foreground="#FFFFFFFF"
					VerticalAlignment="Center" />
                <StackPanel
					Grid.Column="1"
					Orientation="Horizontal">
                    <Button
						Content="─"
						Style="{StaticResource ModernButton}"
						Width="30"
						Height="30"
						Click="MinimizeButton_Click" />
                    <Button
						Content="☐"
						Style="{StaticResource ModernButton}"
						Width="30"
						Height="30"
						Click="MaximizeButton_Click" />
                    <Button
						Content="✕"
						Style="{StaticResource ModernButton}"
						Width="30"
						Height="30"
						Background="#FFAA0000"
						Click="CloseButton_Click" />
                </StackPanel>
            </Grid>
            <Grid
				Row="1"
				Margin="0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
						Width="300" />
                    <ColumnDefinition
						Width="*" />
                    <ColumnDefinition
						Width="300" />
                </Grid.ColumnDefinitions>
                <Border
					Grid.Column="0"
					Background="#AA000000"
					CornerRadius="15"
					Margin="0,0,10,0">
                    <Grid
						Margin="0,0,0,-13">
                        <Grid.RowDefinitions>
                            <RowDefinition
								Height="Auto" />
                            <RowDefinition
								Height="Auto" />
                            <RowDefinition
								Height="Auto" />
                            <RowDefinition
								Height="*" />
                        </Grid.RowDefinitions>
                        
                        <!-- Título -->
                        <TextBlock
							Grid.Row="0"
							Text="📁 Biblioteca Musical"
							FontSize="16"
							FontWeight="Bold"
							Foreground="#FFFFFFFF"
							Margin="20,20,20,10" />
                        
                        <!-- Botón Escanear -->
                        <Button
							Grid.Row="1"
							Content="Escanear Carpeta"
							Style="{StaticResource ModernButton}"
							Margin="20,0,20,10"
							Command="{Binding ScanFolderCommand}" />
                        
                        <!-- Barra de Búsqueda -->
                        <Grid
							Grid.Row="2"
							Margin="20,0,20,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition
									Width="*" />
                                <ColumnDefinition
									Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBox
								Grid.Column="0"
								Style="{StaticResource SearchTextBox}"
								Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
								Height="42">
                                <TextBox.InputBindings>
                                    <KeyBinding
										Key="Escape"
										Command="{Binding ClearSearchCommand}" />
                                </TextBox.InputBindings>
                            </TextBox>
                            <Button
								Grid.Column="1"
								Content="✕"
								Style="{StaticResource ClearSearchButton}"
								Margin="4,2,0,2"
								Command="{Binding ClearSearchCommand}"
								ToolTip="Limpiar búsqueda"
								Visibility="{Binding ClearSearchCommand.CanExecute, Converter={StaticResource BoolToVisibilityConverter}}" />
                            <TextBlock
								Grid.Column="0"
								Text="🔍 Buscar música..."
								FontSize="11"
								Foreground="#FF999999"
								VerticalAlignment="Center"
								Margin="12,0,0,0"
								IsHitTestVisible="False">
                                <TextBlock.Style>
                                    <Style
										TargetType="{x:Type TextBlock}">
                                        <Setter
											Property="Visibility"
											Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger
												Binding="{Binding SearchText}"
												Value="">
                                                <Setter
													Property="Visibility"
													Value="Visible" />
                                            </DataTrigger>
                                            <DataTrigger
												Binding="{Binding SearchText}"
												Value="{x:Null}">
                                                <Setter
													Property="Visibility"
													Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                        
                        <!-- Lista de Canciones -->
                        <ListView
							Grid.Row="3"
							Background="#00FFFFFF"
							BorderThickness="0"
							Margin="8,8,8,12"
							ScrollViewer.HorizontalScrollBarVisibility="Disabled"
							ItemsSource="{Binding FilteredPlaylist}"
							SelectedItem="{Binding SelectedSong}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border
										Background="#22FFFFFF"
										CornerRadius="8"
										Margin="0,2"
										Padding="10">
                                        <UIElement.InputBindings>
                                            <MouseBinding
												MouseAction="LeftDoubleClick"
												Command="{Binding DataContext.PlaySelectedSongCommand, RelativeSource={RelativeSource AncestorType=Window}}"
												CommandParameter="{Binding}" />
                                        </UIElement.InputBindings>
                                        <StackPanel>
                                            <TextBlock
												FontWeight="Bold"
												Foreground="#FFFFFFFF"
												TextTrimming="CharacterEllipsis"
												Text="{Binding Title}" />
                                            <TextBlock
												Foreground="#CCCCCC"
												FontSize="12"
												TextTrimming="CharacterEllipsis"
												Text="{Binding Artist}" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ListView>
                    </Grid>
                </Border>
                <Border
					Grid.Column="1"
					Background="#AA000000"
					CornerRadius="15"
					Margin="10,0,10,0">
                    <Grid>
                        <Ellipse
							Width="280"
							Height="280"
							Fill="#FF1A1A1A"
							Stroke="#FF333333"
							StrokeThickness="2"
							VerticalAlignment="Center"
							HorizontalAlignment="Center" />
                        <Ellipse
							Width="260"
							Height="260"
							VerticalAlignment="Center"
							HorizontalAlignment="Center"
							RenderTransformOrigin="0.5,0.5">
                            <UIElement.RenderTransform>
                                <RotateTransform
									x:Name="VinylRotateTransform"
									Angle="{Binding VinylRotationAngle}" />
                            </UIElement.RenderTransform>
                            <Shape.Fill>
                                <ImageBrush
									Stretch="UniformToFill"
									ImageSource="{Binding CurrentSong.AlbumArt}" />
                            </Shape.Fill>
                        </Ellipse>
                        <Ellipse
							Width="40"
							Height="40"
							Fill="#FF000000"
							Stroke="#FF333333"
							StrokeThickness="2"
							VerticalAlignment="Center"
							HorizontalAlignment="Center" />
                        <StackPanel
							VerticalAlignment="Bottom"
							HorizontalAlignment="Center"
							Margin="20">
                            <TextBlock
								FontSize="18"
								FontWeight="Bold"
								Foreground="#FFFFFFFF"
								TextAlignment="Center"
								TextTrimming="CharacterEllipsis"
								Text="{Binding CurrentSong.Title}" />
                            <TextBlock
								FontSize="14"
								Foreground="#CCCCCC"
								TextAlignment="Center"
								TextTrimming="CharacterEllipsis"
								Text="{Binding CurrentSong.Artist}" />
                        </StackPanel>
                    </Grid>
                </Border>
                <Grid
					Column="2"
					Margin="10,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition
							Height="*" />
                        <RowDefinition
							Height="Auto" />
                    </Grid.RowDefinitions>
                    <Border
						Grid.Row="0"
						Background="#AA000000"
						CornerRadius="15">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition
									Height="Auto" />
                                <RowDefinition
									Height="Auto" />
                                <RowDefinition
									Height="184*" />
                                <RowDefinition
									Height="39*" />
                            </Grid.RowDefinitions>
                            <TextBlock
								Grid.Row="0"
								Text="🎵 Listas de Reproducción"
								FontSize="16"
								FontWeight="Bold"
								Foreground="#FFFFFFFF"
								Margin="20,20,20,10" />
                            <Grid
								Margin="20,51,20,10"
								RowSpan="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition
										Width="*" />
                                    <ColumnDefinition
										Width="*" />
                                </Grid.ColumnDefinitions>
                                <StackPanel
									Grid.Column="0">
                                    <TextBlock
										FontSize="14"
										FontWeight="Bold"
										Foreground="#FF00A8FF"
										HorizontalAlignment="Center"
										Text="{Binding PlaylistManager.Playlists.Count}" />
                                    <TextBlock
										Text="Listas"
										FontSize="10"
										Foreground="#CCCCCC"
										HorizontalAlignment="Center" />
                                </StackPanel>
                                <StackPanel
									Grid.Column="1">
                                    <TextBlock
										FontSize="14"
										FontWeight="Bold"
										Foreground="#FF00A8FF"
										HorizontalAlignment="Center"
										Text="{Binding Playlist.Count}" />
                                    <TextBlock
										Text="Canciones"
										FontSize="10"
										Foreground="#CCCCCC"
										HorizontalAlignment="Center" />
                                </StackPanel>
                            </Grid>
                            <ListView
								Grid.Row="2"
								Background="#00FFFFFF"
								BorderThickness="0"
								Margin="10,10,10,179"
								ScrollViewer.HorizontalScrollBarVisibility="Disabled"
								ItemsSource="{Binding PlaylistManager.Playlists}"
								SelectedItem="{Binding PlaylistManager.SelectedPlaylist}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border
											Background="#22FFFFFF"
											CornerRadius="8"
											Margin="0,2"
											Padding="10">
                                            <FrameworkElement.Style>
                                                <Style
													TargetType="{x:Type Border}">
                                                    <Style.Triggers>
                                                        <DataTrigger
															Value="True"
															Binding="{Binding IsSelected}">
                                                            <Setter
																Property="Background"
																Value="#4400A8FF" />
                                                            <Setter
																Property="BorderBrush"
																Value="#FF00A8FF" />
                                                            <Setter
																Property="BorderThickness"
																Value="1" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </FrameworkElement.Style>
                                            <UIElement.InputBindings>
                                                <MouseBinding
													MouseAction="LeftDoubleClick"
													Command="{Binding DataContext.LoadPlaylistCommand, RelativeSource={RelativeSource AncestorType=Window}}"
													CommandParameter="{Binding}" />
                                            </UIElement.InputBindings>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition
														Width="Auto" />
                                                    <ColumnDefinition
														Width="*" />
                                                    <ColumnDefinition
														Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock
													Grid.Column="0"
													FontSize="16"
													VerticalAlignment="Center"
													Margin="0,0,10,0"
													Text="{Binding PlaylistIcon}" />
                                                <StackPanel
													Grid.Column="1">
                                                    <TextBlock
														FontWeight="Bold"
														Foreground="#FFFFFFFF"
														FontSize="12"
														TextTrimming="CharacterEllipsis"
														Text="{Binding Name}" />
                                                    <TextBlock
														FontSize="10"
														Foreground="#CCCCCC">
                                                        <TextBlock.Text>
                                                            <MultiBinding
																StringFormat="{}{0} canciones • {1}">
                                                                <Binding
																	Path="SongCount" />
                                                                <Binding
																	Path="TotalDuration" />
                                                            </MultiBinding>
                                                        </TextBlock.Text>
                                                    </TextBlock>
                                                </StackPanel>
                                                <TextBlock
													Grid.Column="2"
													FontSize="10"
													Foreground="#FF00A8FF"
													FontWeight="Bold"
													VerticalAlignment="Center"
													Text="{Binding SongCount}" />
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ListView>
                        </Grid>
                    </Border>
                    <Border
						Background="#AA000000"
						CornerRadius="15"
						Margin="0,275,0,0">
                        <StackPanel
							Margin="15,15,15,0">
                            <TextBlock
								Text="🎵 Información"
								FontSize="16"
								FontWeight="Bold"
								Foreground="#FFFFFFFF"
								Margin="0,0,0,20" />
                            <TextBlock
								Text="Álbum:"
								Foreground="#CCCCCC"
								FontSize="10" />
                            <TextBlock
								Foreground="#FFFFFFFF"
								FontWeight="Bold"
								Margin="0,0,0,10"
								TextWrapping="Wrap"
								Text="{Binding CurrentSong.Album}" />
                            <TextBlock
								Text="Género:"
								Foreground="#CCCCCC"
								FontSize="10" />
                            <TextBlock
								Foreground="#FFFFFFFF"
								FontWeight="Bold"
								Margin="0,0,0,10"
								Text="{Binding CurrentSong.Genre}" />
                            <TextBlock
								Text="Año:"
								Foreground="#CCCCCC"
								FontSize="10" />
                            <TextBlock
								Foreground="#FFFFFFFF"
								FontWeight="Bold"
								Margin="0,0,0,10"
								Text="{Binding CurrentSong.Year}" />
                            <TextBlock
								Text="BPM:"
								Foreground="#CCCCCC"
								FontSize="10" />
                            <TextBlock
								Foreground="#FFFFFFFF"
								FontWeight="Bold"
								Margin="0,0,0,10"
								Text="{Binding CurrentSong.BPM}" />
                            <TextBlock
								Text="Duración:"
								Foreground="#CCCCCC"
								FontSize="10" />
                            <TextBlock
								Foreground="#FFFFFFFF"
								FontWeight="Bold"
								Margin="0,0,0,10"
								Text="{Binding CurrentSong.DurationFormatted}" />
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
            <Border
				Grid.Row="2"
				Background="#AA000000"
				CornerRadius="15"
				Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition
							Height="Auto" />
                        <RowDefinition
							Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid
						Row="0"
						Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition
								Width="Auto" />
                            <ColumnDefinition
								Width="*" />
                            <ColumnDefinition
								Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
							Grid.Column="0"
							Foreground="#FFFFFFFF"
							VerticalAlignment="Center"
							Margin="0,0,10,0"
							Text="{Binding CurrentPosition, StringFormat={}{0:mm\\:ss}}" />
                        <Slider
							Name="ProgressSlider"
							Grid.Column="1"
							Style="{StaticResource ModernSlider}"
							VerticalAlignment="Center"
							Maximum="{Binding TotalDuration.TotalSeconds}"
							Value="{Binding CurrentPosition.TotalSeconds, Mode=OneWay}"
							PreviewMouseDown="ProgressSlider_PreviewMouseDown"
							PreviewMouseUp="ProgressSlider_PreviewMouseUp"
							ValueChanged="ProgressSlider_ValueChanged" />
                        <TextBlock
							Grid.Column="2"
							Foreground="#FFFFFFFF"
							VerticalAlignment="Center"
							Margin="10,0,0,0"
							Text="{Binding TotalDuration, StringFormat={}{0:mm\\:ss}}" />
                    </Grid>
                    <Grid
						Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition
								Width="*" />
                            <ColumnDefinition
								Width="Auto" />
                            <ColumnDefinition
								Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel
							Grid.Column="0"
							Orientation="Horizontal"
							HorizontalAlignment="Left">
                            <TextBlock
								Text="🔊"
								Foreground="#FFFFFFFF"
								FontSize="16"
								VerticalAlignment="Center"
								Margin="0,0,10,0" />
                            <Slider
								Width="100"
								Style="{StaticResource ModernSlider}"
								Minimum="0"
								Maximum="1"
								VerticalAlignment="Center"
								Value="{Binding Volume}" />
                        </StackPanel>
                        <StackPanel
							Grid.Column="1"
							Orientation="Horizontal"
							HorizontalAlignment="Center">
                            <Button
								Content="⏮"
								Style="{StaticResource ModernButton}"
								Width="40"
								Height="40"
								FontSize="16"
								Command="{Binding PreviousSongCommand}" />
                            <Button
								Style="{StaticResource PlayButton}"
								Margin="10,0"
								Content="{Binding IsPlaying, Converter={StaticResource PlayPauseConverter}}"
								Command="{Binding TogglePlayPauseCommand}" />
                            <Button
								Content="⏭"
								Style="{StaticResource ModernButton}"
								Width="40"
								Height="40"
								FontSize="16"
								Command="{Binding NextSongCommand}" />
                        </StackPanel>
                        <StackPanel
							Grid.Column="2"
							Orientation="Horizontal"
							HorizontalAlignment="Right">
                            <Button
								Content="🔀"
								Style="{StaticResource ShuffleToggleButton}"
								Width="40"
								Height="40"
								FontSize="16"
								ToolTip="Reproducción Aleatoria"
								Command="{Binding ToggleShuffleCommand}" />
                            <Button
								Content="🔁"
								Style="{StaticResource LoopToggleButton}"
								Width="40"
								Height="40"
								FontSize="16"
								ToolTip="Repetir Canción"
								Command="{Binding ToggleLoopCommand}" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
        <Border
			Background="#EE000000"
			CornerRadius="10"
			Padding="30"
			HorizontalAlignment="Center"
			VerticalAlignment="Top"
			Panel.ZIndex="3"
			Margin="0,79,0,0"
			Visibility="{Binding IsScanning, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel>
                <TextBlock
					Text="Escaneando música..."
					FontSize="16"
					FontWeight="Bold"
					Foreground="#FFFFFFFF"
					TextAlignment="Center"
					Margin="0,0,0,10" />
                <ProgressBar
					Maximum="100"
					Width="300"
					Height="8"
					Margin="0,0,0,10"
					Value="{Binding ScanProgress}"
					ValueChanged="ProgressBar_ValueChanged" />
                <TextBlock
					FontSize="12"
					Foreground="#CCCCCC"
					TextAlignment="Center"
					TextTrimming="CharacterEllipsis"
					Width="300"
					Text="{Binding ScanStatus}" />
            </StackPanel>
        </Border>
    </Grid>
</Window>